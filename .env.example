# Docker Environment Configuration
# Copy this file to .env for local development

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=autoreport
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Backend Configuration
BACKEND_PORT=8000
DATABASE_URL=postgresql://postgres:postgres@db:5432/autoreport
SECRET_KEY=your-secret-key-here
ENVIRONMENT=development
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# PgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@autoreport.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Development/Production Settings
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Security Settings (generate secure values for production)
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# External Services (configure as needed)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage (if using file uploads)
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_FORMAT=json