# AutoReportAI Production Environment Configuration
# This file contains production-ready default values
# Override these values with actual production credentials

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-production-password
POSTGRES_DB=autoreport

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
# CRITICAL: Change these in production
SECRET_KEY=change-this-secret-key-in-production
ENCRYPTION_KEY=Lx4JmUDcz9BUCEnAdi7jw6Q_s_EyHuMWzGsW8U7pJf4=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
AI_PROVIDER=openai
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# =============================================================================
# CELERY AGENT SYSTEM CONFIGURATION
# =============================================================================
CELERY_QUEUES=report_tasks,analysis_tasks,query_tasks,generation_tasks
CELERY_CONCURRENCY=4
CELERY_MAX_TASKS=100
CELERY_PREFETCH_MULTIPLIER=1
CELERY_WORKER_HIJACK_ROOT_LOGGER=false
CELERY_WORKER_LOG_COLOR=false

# Agent Pipeline Configuration
AGENT_OPTIMIZATION_LEVEL=high_performance
AGENT_BATCH_SIZE=2000
AGENT_ENABLE_CACHING=true
AGENT_CACHE_TTL=3600
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=5

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_WORKERS=4
API_BASE_URL=https://api.your-domain.com

# Request Limits
MAX_REQUEST_SIZE=52428800
REQUEST_TIMEOUT=600
API_RATE_LIMIT=5000

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=52428800
ALLOWED_FILE_EXTENSIONS=xlsx,xls,csv,json,txt,pdf
UPLOAD_PATH=/app/uploads
REPORTS_PATH=/app/reports
STORAGE_PATH=/app/storage
LOGS_PATH=/app/logs

# MinIO Object Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=autoreport-prod
MINIO_SECURE=false
FORCE_LOCAL_STORAGE=false

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_SERVER=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SENDER_EMAIL=noreply@your-domain.com
ENABLE_EMAIL_NOTIFICATIONS=true
ADMIN_EMAILS=admin@your-domain.com

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================
ENABLE_MONITORING=true
ENABLE_METRICS=true
METRICS_PORT=9090
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:your-secure-flower-password

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_BACKUP_COUNT=10

# =============================================================================
# DATA SOURCE CONNECTION LIMITS
# =============================================================================
DB_POOL_SIZE=50
DB_POOL_MAX_OVERFLOW=100
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

DATASOURCE_CONNECTION_TIMEOUT=30
DATASOURCE_QUERY_TIMEOUT=600
DATASOURCE_MAX_RETRIES=3

# =============================================================================
# REPORT GENERATION SETTINGS
# =============================================================================
REPORT_PROCESSING_TIMEOUT=3600
MAX_CONCURRENT_REPORTS=20
REPORT_CACHE_DURATION=7200
TEMPLATE_CACHE_SIZE=500
PLACEHOLDER_PROCESSING_TIMEOUT=120

# =============================================================================
# DOCKER COMPOSE SPECIFIC
# =============================================================================
COMPOSE_PROJECT_NAME=autoreportai-prod
COMPOSE_HTTP_TIMEOUT=300

# Service Resource Limits
API_MEMORY_LIMIT=2g
WORKER_MEMORY_LIMIT=2g
DB_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=512m