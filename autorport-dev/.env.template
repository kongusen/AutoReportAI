# ==========================================
# AutoReportAI 环境变量模板
# DDD v2.0 架构配置
# ==========================================

# ==========================================
# 基础环境设置
# ==========================================
NODE_ENV=development
DEBUG=true
PROJECT_NAME=AutoReportAI

# ==========================================
# 服务端口配置
# ==========================================
SERVER_IP=localhost
PORT=8000
FRONTEND_PORT=3000

# ==========================================
# 数据库配置
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=autoreport
DATABASE_URL=postgresql://postgres:postgres123@db:5432/autoreport

# ==========================================
# Redis配置
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# ==========================================
# 安全配置
# ==========================================
SECRET_KEY=dev-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
ENCRYPTION_KEY=ixd0gr5Ntuy8PSOOJsFl4DY1R2fFgFVc34_vu4Yzr1c=

# ==========================================
# Celery任务队列配置
# ==========================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ==========================================
# 时区配置
# ==========================================
TZ=Asia/Shanghai

# ==========================================
# DDD架构配置
# ==========================================
DDD_ARCHITECTURE_ENABLED=true
APPLICATION_SERVICE_LAYER=enabled
DOMAIN_SERVICE_LAYER=enabled
INFRASTRUCTURE_SERVICE_LAYER=enabled
UNIFIED_API_RESPONSE=enabled
TRANSACTIONAL_APPLICATION_SERVICE=enabled

# ==========================================
# Agent系统配置 - 基础设施层
# ==========================================
AGENT_ENGINE=new
NEW_AGENT_MODE=local_stub
NEW_AGENT_TIMEOUT=60
NEW_AGENT_MAX_CONCURRENCY=10
NEW_AGENT_MAX_RETRIES=3

# ==========================================
# LLM服务配置 (可选)
# ==========================================
DEFAULT_LLM_PROVIDER=openai
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# OpenAI API密钥 (请替换为实际密钥)
OPENAI_API_KEY=your-openai-api-key-here

# ==========================================
# Minio对象存储配置
# ==========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET_NAME=autoreport
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ==========================================
# 前端配置
# ==========================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_TELEMETRY_DISABLED=1

# ==========================================
# 默认用户配置
# ==========================================
FIRST_SUPERUSER=admin
FIRST_SUPERUSER_EMAIL=admin@autoreportai.com
FIRST_SUPERUSER_PASSWORD=password

# ==========================================
# 缓存配置
# ==========================================
CACHE_SYSTEM_ENABLED=true
CACHE_DEFAULT_EXPIRE=3600

# ==========================================
# 监控配置
# ==========================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MONITORING=true
LOG_LEVEL=DEBUG

# ==========================================
# 通知配置
# ==========================================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBSOCKET_NOTIFICATIONS=true
WEBSOCKET_ENABLED=true

# ==========================================
# CORS配置
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# 生产环境提醒
# ==========================================
# 生产环境部署时请务必：
# 1. 更改所有默认密钥和密码
# 2. 配置HTTPS和强密码策略
# 3. 设置适当的CORS设置
# 4. 配置LLM API密钥
# 5. 启用监控和日志