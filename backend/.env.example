# 数据库配置
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=autoreport

# Redis配置
REDIS_URL=redis://localhost:6379

# 安全配置
SECRET_KEY=your_very_secure_secret_key_here_at_least_32_characters
ENCRYPTION_KEY=your_fernet_encryption_key_here_44_characters_base64
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 邮件配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
SENDER_EMAIL=noreply@autoreportai.com
SENDER_NAME=AutoReportAI

# WebSocket和通知配置
WS_HOST=localhost
WS_PORT=8000
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBSOCKET_NOTIFICATIONS=true

# 部署环境配置
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# 监控和告警配置
ENABLE_MONITORING=true
MONITORING_CHECK_INTERVAL=300
ALERT_FAILURE_RATE_WARNING=0.1
ALERT_FAILURE_RATE_CRITICAL=0.2
ALERT_AVG_TIME_WARNING=600
ALERT_ERROR_COUNT_WARNING=50
ADMIN_EMAILS=admin@autoreportai.com,ops@autoreportai.com

# AI服务配置
DEFAULT_AI_MODEL=gpt-3.5-turbo
AI_REQUEST_TIMEOUT=300
AI_MAX_RETRIES=3

# ETL配置
ETL_BATCH_SIZE=10000
ETL_QUERY_TIMEOUT=900

# 缓存配置
CACHE_DEFAULT_EXPIRE=3600
CACHE_AI_RESPONSE_EXPIRE=3600

# 文件存储配置
UPLOAD_DIR=./uploads
REPORT_OUTPUT_DIR=./reports
MAX_UPLOAD_SIZE=104857600

# MinIO对象存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=autoreport
MINIO_SECURE=false

# 本地存储配置
LOCAL_STORAGE_PATH=./storage
FORCE_LOCAL_STORAGE=false

# API基础URL
API_BASE_URL=http://localhost:8000

# API配置
API_RATE_LIMIT=100/minute
HEALTH_CHECK_ENABLED=true

# 测试数据库配置
TEST_POSTGRES_USER=testuser
TEST_POSTGRES_PASSWORD=testpassword
TEST_POSTGRES_HOST=localhost
TEST_POSTGRES_PORT=5433
TEST_POSTGRES_DB=test_autoreport