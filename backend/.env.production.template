# 生产环境变量模板
# 复制此文件为 .env.production 并填入实际值

# 部署环境
DEPLOYMENT_ENV=production
CONFIG_PATH=/app/config

# 数据库配置
DB_HOST=postgres
DB_PORT=5432
DB_NAME=autoreport
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password_here

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DATABASE=0

# 安全配置 - 务必更改为安全的随机字符串
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_at_least_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_TIME=3600

# CORS和主机配置
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# MCP服务器配置
MCP_SEMANTIC_ANALYSIS_HOST=mcp-semantic-analysis
MCP_SEMANTIC_ANALYSIS_PORT=8001
MCP_SQL_GENERATION_HOST=mcp-sql-generation
MCP_SQL_GENERATION_PORT=8002
MCP_DATA_EXECUTION_HOST=mcp-data-execution
MCP_DATA_EXECUTION_PORT=8003
MCP_QUALITY_ASSESSMENT_HOST=mcp-quality-assessment
MCP_QUALITY_ASSESSMENT_PORT=8004

# MCP编排器配置
MCP_MAX_CONCURRENT_REQUESTS=100
MCP_REQUEST_TIMEOUT=600
MCP_CIRCUIT_BREAKER_FAILURE_THRESHOLD=10
MCP_LOAD_BALANCING_STRATEGY=weighted_round_robin
MCP_ENABLE_METRICS=true
MCP_CACHE_TTL=600

# 应用配置
APP_NAME=AutoReportAI
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# 部署配置
WORKERS=8
WORKER_TIMEOUT=60
MAX_REQUESTS_PER_WORKER=2000
PORT=8000
HOST=0.0.0.0

# 监控配置
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics
ENABLE_STRUCTURED_LOGGING=true

# SSL/TLS配置
ACME_EMAIL=admin@yourdomain.com

# 监控工具密码
GRAFANA_PASSWORD=your_secure_grafana_password_here

# 文件存储
UPLOAD_PATH=/app/uploads
MAX_UPLOAD_SIZE=100MB

# 邮件配置 (可选)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_USE_TLS=true

# 备份配置 (可选)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1