# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.local and update values for your environment
# 
# IMPORTANT: This file contains all possible environment variables.
# Only set the ones you need for your specific environment.

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# API Configuration
# Base URL for the backend API (REQUIRED)
# Examples: http://localhost:8000/api/v1, https://api.autoreportai.com/api/v1
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# API request timeout in milliseconds (default: 30000)
NEXT_PUBLIC_API_TIMEOUT=30000

# App Configuration
# Public URL of the frontend application (REQUIRED)
# Examples: http://localhost:3000, https://app.autoreportai.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application version (default: 1.0.0)
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment (REQUIRED)
# Values: development, staging, production, test
NODE_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI-powered features (default: true)
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable real-time updates via WebSocket (default: true)
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true

# Enable advanced analytics features (default: true)
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true

# Enable experimental features (default: false, use with caution)
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable offline mode support (default: false)
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# Enable push notifications (default: false)
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# =============================================================================
# DEVELOPMENT/DEBUG CONFIGURATION
# =============================================================================

# Enable debug logging in the browser (default: false)
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false

# Use mock data instead of real API calls (default: false)
NEXT_PUBLIC_ENABLE_MOCK_MODE=false

# Enable performance metrics collection (default: false)
NEXT_PUBLIC_ENABLE_PERFORMANCE_METRICS=false

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Analytics tracking ID (Google Analytics, etc.)
# Example: G-XXXXXXXXXX or UA-XXXXXXXXX-X
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry DSN for error reporting
# Example: https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable Content Security Policy (default: varies by environment)
# NEXT_PUBLIC_ENABLE_CSP=true

# Enable HTTP Strict Transport Security (default: varies by environment)
# NEXT_PUBLIC_ENABLE_HSTS=true

# Token refresh threshold in minutes (default: 15)
# NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=15

# Session timeout in minutes (default: varies by environment)
# NEXT_PUBLIC_SESSION_TIMEOUT=240

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES:
# =============================================================================

# DEVELOPMENT:
# NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
# NEXT_PUBLIC_ENABLE_DEBUG_LOGS=true
# NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=true

# STAGING:
# NEXT_PUBLIC_API_URL=https://staging-api.autoreportai.com/api/v1
# NEXT_PUBLIC_ENABLE_DEBUG_LOGS=true
# NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=true

# PRODUCTION:
# NEXT_PUBLIC_API_URL=https://api.autoreportai.com/api/v1
# NEXT_PUBLIC_ENABLE_DEBUG_LOGS=false
# NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# =============================================================================
# IMPORTANT NOTES:
# =============================================================================
# 1. All NEXT_PUBLIC_ variables are exposed to the browser
# 2. Never put sensitive data in NEXT_PUBLIC_ variables
# 3. Restart the development server after changing environment variables
# 4. Use different values for different environments (dev, staging, prod)
# 5. Validate your configuration using the config debug utilities