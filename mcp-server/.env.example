# AutoReportAI MCP Server Environment Configuration
# 复制此文件为 .env 并根据实际情况修改配置

# ===== 后端API配置 =====
BACKEND_BASE_URL=http://localhost:8000/api/v1
BACKEND_TIMEOUT=30

# ===== 默认管理员账户 =====
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# ===== MCP服务器配置 =====
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001

# ===== 会话管理配置 =====
SESSION_TIMEOUT=3600
MAX_SESSIONS=100

# ===== 文件上传配置 =====
MAX_FILE_SIZE=50
ALLOWED_FILE_EXTENSIONS=.csv,.xlsx,.xls,.docx,.doc,.html,.htm,.pdf,.txt

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FILE=mcp-server.log

# ===== 数据库连接池配置 =====
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10